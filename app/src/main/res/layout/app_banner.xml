<?xml version="1.0" encoding="utf-8"?>
<com.amazon.tv.leanbacklauncher.apps.BannerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/banner_width"
    android:layout_height="@dimen/banner_height"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@id/banner_focused_frame"
        android:layout_width="@dimen/banner_frame_width"
        android:layout_height="@dimen/banner_frame_height"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:visibility="gone"
        android:src="@drawable/banner_focused_frame" />

    <ImageView
        android:id="@id/edit_focused_frame"
        android:layout_width="@dimen/edit_frame_width"
        android:layout_height="@dimen/edit_frame_height"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:visibility="gone"
        android:src="@drawable/edit_focused_frame" />

    <ImageView
        android:id="@id/app_banner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/banner_background"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <include layout="@layout/install_state_overlay" />
</com.amazon.tv.leanbacklauncher.apps.BannerView>
